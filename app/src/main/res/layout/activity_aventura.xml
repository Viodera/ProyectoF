<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B0028"
    tools:context=".Aventura">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="203dp"
            android:background="#1F0C0414"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <TextView
                    android:id="@+id/tvTextoDiosa"
                    android:layout_width="636dp"
                    android:layout_height="match_parent"
                    android:background="#F4F1DE"
                    android:fontFamily="@font/aclonica"
                    android:paddingStart="35dp"
                    android:paddingTop="10dp"
                    android:textColor="#1B0028" />
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <ImageView
                    android:id="@+id/imagenMonstruo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:background="#8E5A30"
                    android:src="@drawable/diosa_icono" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <ImageView
                    android:layout_width="231dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:background="#D17A47"
                    android:src="@drawable/bard" />
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:background="#F4F1DE"
                    android:gravity="right"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tvTextoPJ"
                        android:layout_width="match_parent"
                        android:layout_height="111dp"
                        android:background="#F4F1DE"
                        android:fontFamily="@font/aclonica"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"
                        android:text="..."
                        android:textColor="#1B0028" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/buttContinuar"
                            android:layout_width="269dp"
                            android:layout_height="77dp"
                            android:layout_weight="0"
                            android:backgroundTint="#FFCA3A"
                            android:fontFamily="@font/aclonica"
                            android:text="Continuar"
                            android:textColor="#1B0028"
                            android:textSize="34sp"
                            android:textStyle="bold"
                            android:visibility="invisible" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <Button
                            android:id="@+id/buttSalirAventura"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20dp"
                            android:layout_weight="0"
                            android:backgroundTint="#D17A47"
                            android:fontFamily="@font/aclonica"
                            android:text="AtrÃ¡s"
                            android:textAlignment="viewEnd"
                            android:textColor="#1B0028"
                            android:textColorHint="#1B0028"
                            android:textSize="34dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>