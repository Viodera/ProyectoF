<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B0028"
    tools:context=".Login">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="116dp"
            android:src="@drawable/logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F4F1DE"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:ems="10"
                android:fontFamily="@font/aclonica"
                android:hint="Usuario"
                android:inputType="text"
                android:textColor="#1B0028"
                android:textColorHint="#1B0028" />

            <EditText
                android:id="@+id/etContra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:ems="10"
                android:fontFamily="@font/aclonica"
                android:hint="ContraseÃ±a"
                android:inputType="text|textPassword"
                android:textColor="#1B0028"
                android:textColorHint="#1B0028" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D17A47"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttEntrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_weight="1"
                android:backgroundTint="#FFCA3A"
                android:fontFamily="@font/aclonica"
                android:text="Entrar"
                android:textColor="#1B0028" />

            <Button
                android:id="@+id/buttCrear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_weight="1"
                android:backgroundTint="#FFCA3A"
                android:fontFamily="@font/aclonica"
                android:text="Crear"
                android:textColor="#1B0028" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutPJ"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#D17A47"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagenPJ"
                android:layout_width="162dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_weight="0"
                android:src="@drawable/bard"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tvDatosPJ"
                android:layout_width="416dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:fontFamily="@font/aclonica"
                android:text="BABABLALBALBLBLBALB\nBALBLABLABLA"
                android:textColor="#1B0028"
                android:textStyle="bold"
                android:visibility="invisible" />

            <Button
                android:id="@+id/buttJugar"
                android:layout_width="77dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:layout_marginEnd="30dp"
                android:layout_weight="0"
                android:backgroundTint="#FFCA3A"
                android:fontFamily="@font/aclonica"
                android:text="J\nU\nG\nA\nR"
                android:textColor="#1B0028"
                android:visibility="invisible" />
            android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>