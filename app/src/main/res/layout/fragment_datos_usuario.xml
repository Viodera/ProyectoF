<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFCA3A"
    tools:context=".fragmentos.DatosUsuario">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNombreUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#8E5A30"
            android:fontFamily="@font/aclonica"
            android:text="FULANITO"
            android:textAlignment="center"
            android:textColor="#F4F1DE"
            android:textSize="34sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttGuardar"
                android:layout_width="250dp"
                android:layout_height="74dp"
                android:layout_weight="0"
                android:backgroundTint="#D17A47"
                android:fontFamily="@font/aclonica"
                android:text="Guardar"
                android:textAlignment="center"
                android:textColor="#1B0028"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="0" />

            <Button
                android:id="@+id/buttCerrarSesiÃ³n"
                android:layout_width="250dp"
                android:layout_height="74dp"
                android:layout_weight="0"
                android:backgroundTint="#D17A47"
                android:fontFamily="@font/aclonica"
                android:text="Cerrar Sesion"
                android:textAlignment="center"
                android:textColor="#1B0028"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>