<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mapa"
    tools:context=".Inicio">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/mapa"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/mapa"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/buttInformacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="516dp"
            android:layout_marginTop="132dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/aclonica"
            android:shadowColor="#000000"
            android:shadowDx="5"
            android:shadowDy="3"
            android:shadowRadius="0.5"
            android:text="InformaciÃ³n"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/mapa"
            app:layout_constraintTop_toTopOf="@id/mapa" />

        <Button
            android:id="@+id/buttEntrenar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="484dp"
            android:layout_marginTop="244dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/aclonica"
            android:shadowColor="#000000"
            android:shadowDx="5"
            android:shadowDy="3"
            android:shadowRadius="0.5"
            android:text="Entrenar"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/mapa"
            app:layout_constraintTop_toTopOf="@id/mapa" />

        <Button
            android:id="@+id/buttAventura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="260dp"
            android:layout_marginTop="144dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/aclonica"
            android:shadowColor="#000000"
            android:shadowDx="5"
            android:shadowDy="3"
            android:shadowRadius="0.5"
            android:text="Aventura"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/mapa"
            app:layout_constraintTop_toTopOf="@id/mapa" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>